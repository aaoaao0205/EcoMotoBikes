<section class="custom-section">
    <div class="custom-container">
        <div class="custom-row">
            <div class="custom-col">
                <%= image_tag @item.image, class: "item-box-img" %>
            </div>
            <div class="custom-col">
                <h1><%= @item.item_name %></h1>
                <div><%= number_to_currency(@item.price, unit: '¥', precision: 0) %></div>
                <p><%= @item.description %></p>
                <% if user_signed_in? %>
                <% if current_user.id == @item.user_id %>
                    <div>
                <%= link_to '編集', edit_item_path(@item), class: "btn-outline-dark" %>
                <%= link_to '削除', "/items/#{@item.id}", data: { turbo_method: :delete } %>
                    </div>
                <% else %>
                    <div>
                       <a href="<%= add_to_cart_path(@item) %>" data-turbo="false" class="btn-outline-dark">Add to cart</a>
                    </div>
                <% end %>
                <% end %>
            </div>
        </div>
    </div>
</section>